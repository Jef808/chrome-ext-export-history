{
  "manifest_version": 3,
  "name": "History Publisher",
  "version": "1.0",
  "description": "Publish your browsing history to a remote server.",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "History Publisher",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}
